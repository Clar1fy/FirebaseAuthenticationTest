<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.timplifier.firebaseauthenticationtest.presentation.ui.authentication.fragments.signUp.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/mainFlowFragment"
        android:name="com.timplifier.firebaseauthenticationtest.presentation.ui.main.MainFlowFragment"
        android:label="fragment_main_flow"
        tools:layout="@layout/fragment_main_flow" />
    <fragment
        android:id="@+id/authenticationFlowFragment"
        android:name="com.timplifier.firebaseauthenticationtest.presentation.ui.authentication.AuthenticationFlowFragment"
        android:label="fragment_authentication_flow"
        tools:layout="@layout/fragment_authentication_flow">
        <action
            android:id="@+id/action_authenticationFlowFragment_to_verifyAuthenticationFragment2"
            app:destination="@id/verifyAuthenticationFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyAuthenticationFragment"
        android:name="com.timplifier.firebaseauthenticationtest.presentation.ui.authentication.fragments.verifying.VerifyAuthenticationFragment"
        android:label="fragment_verify_authentication"
        tools:layout="@layout/fragment_verify_authentication" />
</navigation>